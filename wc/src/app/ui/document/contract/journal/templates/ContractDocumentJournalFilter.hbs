<div class="row dynamicDateWidth">
    <div class="col-lg-6">
        <div style="margin-right: 25px;">
            {{peContainer editors.organization columnsRatio="2:10"}}
            {{peContainer editors.contractor columnsRatio="2:10"}}
            {{peContainer editors.status columnsRatio="2:10"}}
            {{peContainer editors.contractState columnsRatio="2:10"}}
            {{peContainer editors.summary columnsRatio="2:10"}}
            <div class="row">
                <div class="col-sm-6">{{peContainer editors.costFrom columnsRatio="4:8"}}</div>
                <div class="col-sm-6">{{peContainer editors.costTo columnsRatio="2:10"}}</div>
            </div>
            {{peContainer editors.performer columnsRatio="2:10"}}
        </div>
    </div>

    <div class="col-lg-6">
        <div class="row">
            <div class="col-sm-6">{{peContainer editors.creationDateFrom columnsRatio="6:6"}}</div>
            <div class="col-sm-6">{{peContainer editors.creationDateTo columnsRatio="4:8"}}</div>
        </div>
        <div class="row">
            <div class="col-sm-6">{{peContainer editors.signingDateFrom columnsRatio="6:6"}}</div>
            <div class="col-sm-6">{{peContainer editors.signingDateTo columnsRatio="4:8"}}</div>
        </div>
        {{peContainer editors.curator columnsRatio="3:9"}}
        {{peContainer editors.signatory columnsRatio="3:9"}}
        {{peContainer editors.dealWithInterest columnsRatio="3:9"}}
        {{peContainer editors.bigDeal columnsRatio="3:9"}}
        {{peContainer editors.greatlyDeal columnsRatio="3:9"}}
    </div>
</div>
