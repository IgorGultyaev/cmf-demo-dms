<div class="row" style="padding:0px;">
    <div class="col-lg-4 cmf-task">
        <div id="task-affix" style="padding: 0px 30px; box-shadow: none">
            <div class="row x-pe-container">
                <label class="x-pe-label">{{viewModel.meta.props.comment.descr}}</label>
                {{pe name="comment" viewModel=viewModel tag="div"}}
            </div>
            <div class="row x-pe-container">
                <label class="x-pe-label">{{viewModel.meta.model.entities.WarrantDocument.props.summary.descr}}</label>
                <div>
                    {{pe name="summary" viewModel=viewModel.document tag="div" readOnly=true}}
                </div>
            </div>
            <div class="row x-pe-container">
                <label class="col-sm-4 x-pe-label">{{viewModel.meta.model.entities.WarrantDocument.props.documentKind.descr}}</label>
                <div class="col-sm-8">
                    {{pe name="documentKind" viewModel=viewModel.document tag="div" readOnly=true}}
                </div>
            </div>
            <div class="row x-pe-container">
                <label class="col-sm-4 x-pe-label">{{viewModel.meta.model.entities.WarrantDocument.props.performer.descr}}</label>
                <div class="col-sm-8 performer">
                    <div style="float:left;">{{pe name="performer" viewModel=viewModel.document tag="div"
                                                  readOnly=true}}</div>
                </div>
            </div>
            <div class="row x-pe-container">
                <label class="col-sm-4 x-pe-label">{{viewModel.meta.model.entities.WarrantDocument.props.author.descr}}</label>
                <div class="col-sm-8 author">
                    <div style="float:left;">{{pe name="author" viewModel=viewModel.document tag="div"
                                                  readOnly=true}}</div>
                </div>

            </div>

            <div class="row x-pe-container">
                <label class="col-sm-4 x-pe-label">{{viewModel.meta.model.entities.WarrantDocument.props.status.descr}}</label>
                <div class="col-sm-8">
                    {{pe name="status" viewModel=viewModel.document readOnly=true tag="div"}}
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-8 cmf-document command-hide" style="padding:0px;">
        {{render previewComponent}}
    </div>


</div>

